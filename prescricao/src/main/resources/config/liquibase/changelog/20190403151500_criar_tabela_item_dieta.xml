<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        JHipster core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    
    <changeSet id="20190401161700-1" author="mateusbraga">
        <createTable tableName="item_dieta">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="quantidade" type="decimal(10,2)" />
            <column name="frequencia" type="int(10)" />
            <column name="numero_vezes" type="int(10)" />	
            <column name="id_tipo_item" type="bigint" />
            <column name="id_tipo_unidade" type="bigint" />
            <column name="id_tipo_aprazamento" type="bigint" />
            <column name="id_dieta" type="bigint">
            	<constraints nullable="true" />
            </column>
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="id_tipo_item"
                                 baseTableName="item_dieta"
                                 constraintName="fk_tipo_item_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tipo_item"
        />
        
        <addForeignKeyConstraint baseColumnNames="id_tipo_unidade"
                                 baseTableName="item_dieta"
                                 constraintName="fk_tipo_unidade_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tipo_unidade"
        />
        
        <addForeignKeyConstraint baseColumnNames="id_tipo_aprazamento"
                                 baseTableName="item_dieta"
                                 constraintName="fk_tipo_aprazamento_id"
                                 referencedColumnNames="id"
                                 referencedTableName="tipo_aprazamento"
        />
        
        <addForeignKeyConstraint baseColumnNames="id_dieta"
                                 baseTableName="item_dieta"
                                 constraintName="fk_dieta_id"
                                 referencedColumnNames="id"
                                 referencedTableName="dieta"
        />


    </changeSet>

</databaseChangeLog>
