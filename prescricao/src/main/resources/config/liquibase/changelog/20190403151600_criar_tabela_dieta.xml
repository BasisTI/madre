<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">


    <!--
        JHipster core tables.
        The initial schema has the '00000000000001' id, so that it is over-written if we re-generate it.
    -->
    
    <changeSet id="20190403125400-1" author="mateusbraga">
        <createTable tableName="dieta" remarks="Prescrever dieta">
            <column name="id" type="bigserial">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="id_paciente" type="bigint" remarks="Código da dieta"/>
            <column name="observacao" type="varchar(100)" remarks="Observação de prescrição de dieta" />
            <column name="bomba_infusao" type="bool" remarks="Bomba de infusão"/>
        </createTable>
        
     

	</changeSet>
</databaseChangeLog>
